%html
  %head
    - title = "Share39"
    %title= title
    %link{ href: "/css/main.css", rel: "stylesheet" }
    %meta{ charset: "utf-8" }
    %meta{ :"http-equiv" => "X-UA-Compatible", content: "IE=edge,chrome=1" }
    %meta{ name: "description", content: "" }
    %meta{ name: "keywords", content: "" }    
    %meta{ name: "author", content: "" }    
    -# %meta{ name: "viewport", content: "width=device-width, initial-scale=1.0" }
    %script{ src: "/js/modernizr.js", type: "text/javascript" }
  %body{ class: request.path.split("/")[1] }
    %header
      #header
        %h1
          - link_to "Share<span class='three'>3</span><span class='nine'>9</span>", "/"
        %nav
          - nav_link_to "Songs",    "/songs"
          - nav_link_to "Artists",  "/artists"
          - nav_link_to "Stats",   "/stats" # TODO: move to a form in all the pages (layout)
          - nav_link_to "Settings", "/settings"
        .clear
    #container
      = haml :"_flashes"
      #content
        %form{ action: "/songs/search", method: "get", id: "search" }
          %input{ name: "query", type: "text", value: params[:query] }
          %input{ type: "submit", value: "Search", class: "submit" }
        = yield
      %footer  
    %script{ src: "/js/jquery.js", type: "text/javascript" }
    %script{ src: "/js/main.js", type: "text/javascript" }
    :javascript
      $(function(){
        // dom ready
      });